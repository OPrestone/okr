# Database connection string
DATABASE_URL=postgresql://username:password@localhost:5432/okr_management

# Session secret (generate a random string)
SESSION_SECRET=your-secret-session-key-replace-this-with-a-random-string

# Server port
PORT=5000

# Node environment (development, production, test)
NODE_ENV=development

# Google API credentials (if using Google Meet integration)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Email configuration (if using email notifications)
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# EMAIL_FROM=your-email@example.com

# File upload settings
# MAX_FILE_SIZE=5000000 # 5MB in bytes