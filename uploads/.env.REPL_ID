# OKR System Environment Variables for Replit

# REPL_ID is automatically provided by Replit
REPL_ID=@your-repl-id

# API Configuration
API_BASE_URL=https://api.okrsystem.com/v1
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Authentication
AUTH_SECRET=${REPL_ID}_auth_secret
JWT_SECRET=${REPL_ID}_jwt_secret
JWT_EXPIRES_IN=24h
SESSION_SECRET=${REPL_ID}_session_secret

# Integration API Keys
GOOGLE_WORKSPACE_CLIENT_ID=${GOOGLE_WORKSPACE_CLIENT_ID}
GOOGLE_WORKSPACE_CLIENT_SECRET=${GOOGLE_WORKSPACE_CLIENT_SECRET}
MICROSOFT_TEAMS_CLIENT_ID=${MICROSOFT_TEAMS_CLIENT_ID}
MICROSOFT_TEAMS_CLIENT_SECRET=${MICROSOFT_TEAMS_CLIENT_SECRET}
SLACK_CLIENT_ID=${SLACK_CLIENT_ID}
SLACK_CLIENT_SECRET=${SLACK_CLIENT_SECRET}
JIRA_API_TOKEN=${JIRA_API_TOKEN}
GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
GITHUB_CLIENT_SECRET=${GITHUB_CLIENT_SECRET}
ASANA_CLIENT_ID=${ASANA_CLIENT_ID}
ASANA_CLIENT_SECRET=${ASANA_CLIENT_SECRET}
MIRO_CLIENT_ID=${MIRO_CLIENT_ID}
MIRO_CLIENT_SECRET=${MIRO_CLIENT_SECRET}
ODOO_API_KEY=${ODOO_API_KEY}

# Email Configuration
SENDGRID_API_KEY=${SENDGRID_API_KEY}
EMAIL_FROM=no-reply@okrsystem.com
EMAIL_ADMIN=admin@okrsystem.com

# Application Settings
NODE_ENV=development
PORT=5000
CLIENT_URL=https://${REPL_ID}.repl.co
USE_MOCK_DATA=true
ENABLE_LOGGING=true
LOG_LEVEL=debug

# Feature Flags
FEATURE_AI_OKR_GENERATION=true
FEATURE_STRATEGY_MAP=true
FEATURE_FINANCIAL_INTEGRATION=true
FEATURE_ADVANCED_REPORTING=true
FEATURE_USER_MANAGEMENT=true

# Database Configuration (used when not using mock data)
DATABASE_URL=${DATABASE_URL}
DATABASE_TYPE=postgres
DATABASE_HOST=${PGHOST}
DATABASE_PORT=${PGPORT}
DATABASE_NAME=${PGDATABASE}
DATABASE_USER=${PGUSER}
DATABASE_PASSWORD=${PGPASSWORD}

# S3 Storage (for file uploads)
S3_BUCKET=${S3_BUCKET}
S3_REGION=${S3_REGION}
S3_ACCESS_KEY=${S3_ACCESS_KEY}
S3_SECRET_KEY=${S3_SECRET_KEY}

# Replit-specific configuration
REPLIT_DB_URL=${REPLIT_DB_URL}
REPL_OWNER=${REPL_OWNER}
REPL_SLUG=${REPL_SLUG}